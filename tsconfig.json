{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "ES5",
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"],
      "@sections/*": ["src/sections/*"],
      "@typings": ["typings/*"],
      "@styles/*": ["src/styles/*"],
      "@layouts/*": ["src/layouts/*"],
      "@config/*": ["src/config/*"],
      "@state/*": ["src/state/*"],
      "@generator/*": ["src/generator/*"],
      "@resource/*": ["src/resource/*"]
    },
    "isolatedModules": true,
    "jsxImportSource": "@emotion/react"
  },
  "files": ["typings/twin.d.ts", "typings/declaration.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
